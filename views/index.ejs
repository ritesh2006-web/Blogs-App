<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>My Blog - Home</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <header>
    <h1>My Blog</h1>
    <nav>
      <a href="/">Home</a>
      <a href="/new">Create Post</a>
    </nav>
  </header>

  <main>
    <section class="intro">
      <h2>Welcome to the Blog</h2>
      <p>Create and view your posts below.</p>
      <a href="/new" class="btn">Create New Post</a>
    </section>

    <section class="posts">
      <% if (posts.length === 0) { %>
        <p>No posts yet! <a href="/new">Create one</a>.</p>
      <% } else { %>
        <% posts.forEach(post => { %>
          <div class="post">
            <h3><%= post.title %></h3>
            <p><%= post.content %></p>

            <a href="/edit/<%= post.id %>" class="btn edit-btn">Edit</a>

            <form action="/delete/<%= post.id %>" method="POST" style="display:inline;">
              <button type="submit" onclick="return confirm('Are you sure you want to delete this post?');" class="btn delete-btn">
                Delete
              </button>
            </form>
          </div>
        <% }) %>
      <% } %>
    </section>
  </main>

  <footer>
    <p>&copy; 2025 My Blog App</p>
  </footer>
</body>
</html>
