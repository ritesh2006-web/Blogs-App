<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Blog App</title>
  <link rel="stylesheet" href="/styles.css">
</head>

<body>
  <header>
    <h1>üìù Blog.ai</h1>
    <a href="/new" class="btn">+ New Post</a>
  </header>

  <main>
    <% if (posts.length===0) { %>
      <p>No posts yet. Be the first to add one!</p>
      <% } else { %>
        <% posts.forEach(post=> { %>
          <div class="card">
            <h2>
              <%= post.title %>
            </h2>
            <p>
              <%= post.content.length> 100 ? post.content.slice(0, 200) + "..." : post.content %>
            </p>


            <div class="actions">
              <a href="/blog/<%= post.id %>" class="btn">Read More</a>
              <form action="/edit/<%= post.id %>" method="get">
                <button>Edit</button>
              </form>
              <form action="/delete/<%= post.id %>" method="post">
                <button class="delete">Delete</button>
              </form>
            </div>
          </div>
          <% }) %>
            <% } %>
  </main>
</body>

</html>